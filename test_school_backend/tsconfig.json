{
  "compilerOptions": {
    "module": "ESNext",            // Use ESNext modules
    "target": "ESNext",            // Target the latest JavaScript version
    "moduleResolution": "Node",    // Resolve modules in Node.js style
    "esModuleInterop": true,       // Enable interoperability between CommonJS and ES Modules
    "strict": true,                // Enable all strict type-checking options
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  }
}
